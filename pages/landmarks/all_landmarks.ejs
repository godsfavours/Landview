<% layout('layouts/boilerplate') %>
  <h1>All Landmarks</h1>

  <div class="container d-flex flex-column">
    <% for (let landmark of landmarks) {%>

      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img class="img-thumbnail" src="<%= landmark.image %> " alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= landmark.name %>
              </h5>
              <p class="card-text">
                <%= landmark.description %>
              </p>
              <p class="card-text"><small class="text-muted">Last updated on <%= landmark.lastUpdated %> </small></p>
              <a class="btn btn-primary" href="/landmarks/<%= landmark._id %> ">View</a>
            </div>
          </div>
        </div>
      </div>

      <% } %>
  </div>


  </body>

  </html>